{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": "src/",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
